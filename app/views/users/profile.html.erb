<h1>Profile</h1>

<%= form_for @user do |f| %>
	<% if @user.errors.any? %>
	<div class="error message">
	<h2>form is invalid</h2>
	<ul>
	  <%# @user.errors.full_message.each do |message| %>
	 <li><%#= message %></li> 
	  <%# end %>
	</ul>
	  </div>
	  <% end %>
	  <p>
		  <%= f.label :full_name %><br />
		  <%= f.text_field :full_name %>
		  </p>
		  <p>
		  <%= f.label :email %><br />
		  <%= f.text_field :email, :disabled => true %>
		  </p>
		  <!-- <p>
		  <%= f.label :change_password %><br />
		  <%= f.password_field :change_password %>
	      </p> -->
	     <p>
		  <%= f.label :picture %><br />
		  <%= f.file_field :picture %>
	     </p> 

	   <br />
	    <p class=""><%= f.submit :class => "btn btn-success" %></p>
      <% end %>
          
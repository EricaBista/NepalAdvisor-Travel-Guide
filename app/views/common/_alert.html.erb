
   <% if notice.present? %>
                <div class="alert alert-warning">
                  <a href="#" class="close" data-dismiss="alert">&times;</a>
                   <%= notice %>

              </div>
              <% end %>
              
               <% if alert.present? %>
                  <div class="alert alert-danger">
                  <a href="#" class="close" data-dismiss="alert">&times;</a>
                  <strong>Error!</strong> <%= alert %>
              </div>
              <% end %>
<%
if @category.banner?
  category_banner=@category.banner
else
  category_banner='/assets/banner/banner1.jpg'
end
%>

<style>
.banner1
{ 
  background:url(<%= category_banner %>) no-repeat center center ;
}
</style>
  <!-- inner banner start from here -->    
  <div class="banner1">
    <div class="container">
    <div class="col col-sm-12"
    <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
    <% if @category.bannername.present? %>
    <h2><%= @category.bannername.html_safe %> in Nepal</h2>
    <% else %>
    <h2><%= @category.Name.html_safe %> in Nepal</h2>
   <% end %>

    </div>
    <div class="col-sm-4"></div>
    </div></div>
   
    </div>
 
 
  <!-- inner banner end here -->      
 <div class="gap"></div>
 <!-- main body start from here --> 
  
    <div class="container">
  <div class="row">
          
            <div class="col col-sm-9"><!-- content body start from here -->
              
         
          
              
               <%= render "common/horizontal_ads" %>
              <%= render "common/alert" %>
             
             
              <div class="gap"></div>
              
             
             
             
             <div class="col-sm-12">
             <div class="row">
             <div class="pageTitle"> 
            
             
            
             <%= @category.Description.html_safe %>

             
          </div>
          </div><!-- row end -->  
            </div><!-- col col-sm-12 end --> 
        
        
        
       <div class="col-sm-12">
             <div class="row">
             <div class="pageTitleTab"> 
             <% if @category.heading.present? %>
             <h5> <%= @category.heading.html_safe %></h5>
             <% else %>
              <h5> Best place in nepal </h5>
              <% end %>
             <div class="border"></div>
             
             
             <div class="row"> <!-- row start -->
                
                <% j = 0 %>
                <% @items.each do |i| %>
                <%  j +=1 %>
                
                <div class="col-sm-4">

                <% if i.images[0].present? %>
                <%= link_to image_tag(i.images[0].image_url(:thumb),:class =>"img-responsive"), item_path(i)   %>
               <% else %>
               <%= link_to image_tag("nowall.jpg", :class=>"img-responsive"), item_path(i) %>
               <% end %>

                <div  class="titlePlaceInfo">
                <span class="mainTitle"><%= i.Name %></span></br>
                <span class="mainTitleLocation"><%= i.short_tag.html_safe if i.short_tag.present? %></span></br>
                <span class="likesReview"><%= i.likes.count%> LIKES / <span style="color:#5f9a16;"><%= i.reviews.count%> Reviews</span></span>
                </div></div>
                <% if j%3==0 %> 
                </div>
                <div class="row">
                <% end %>

                <% end %>
               
                
               </div><!-- row end ---------->
                
           
             
          </div>
          </div><!-- row end -->    
            </div><!-- col col-sm-12 end -->      
        
        
       
        </div><!-- content body end here --> 
        
        
        
        